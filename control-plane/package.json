{
  "name": "veralux-receptionist",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bash scripts/dev_with_services.sh",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "build:dev-console": "esbuild src/dev-console.ts --bundle --format=esm --outfile=public/dev-console.js",
    "db:migrate": "node scripts/migrate.js up",
    "db:rollback": "node scripts/migrate.js down",
    "db:status": "node scripts/migrate.js status",
    "report:runtime": "npm run build && node scripts/print_runtime_contract.js",
    "check:contract": "node -r ts-node/register scripts/check_contract_compat.ts",
    "seed:stage1": "node scripts/seed_stage1_test.js",
    "test": "npm run build && node --test tests/auth.test.js tests/validation.test.js tests/runtimeContract.test.js tests/runtimePublisher.test.js tests/tenantIsolation.test.js",
    "test:runtime": "npm run build && node --test tests/runtimeContract.test.js tests/runtimePublisher.test.js",
    "test:saas": "npm run build && node --test tests/tenantIsolation.test.js tests/saasIntegration.test.js",
    "test:isolation": "npm run build && node --test tests/tenantIsolation.test.js",
    "test:stage1": "bash scripts/stage1_smoke_test.sh",
    "test:stage2": "bash scripts/stage2_smoke_test.sh"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.687.0",
    "@veralux/shared": "*",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "jose": "^6.1.3",
    "multer": "^2.0.2",
    "nodemailer": "^8.0.1",
    "pg": "^8.12.0",
    "redis": "^5.10.0",
    "stripe": "^20.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.10.2",
    "esbuild": "^0.27.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.0"
  }
}
