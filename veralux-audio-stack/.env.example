# veralux-audio-stack environment variables
# Copy to .env and customize

# Domain for TLS certificates (required for HTTPS)
DOMAIN=audio.example.com
ACME_EMAIL=admin@example.com

# Image version tag
VERSION=1.0.0

# XTTS tunings (upbeat preset)
COQUI_TEMPERATURE=0.80
COQUI_SPEED=1.18
COQUI_TOP_P=0.92
COQUI_LENGTH_PENALTY=1.0
COQUI_REPETITION_PENALTY=2.0
COQUI_TOP_K=50

# Whisper settings
WHISPER_MODEL=small
WHISPER_DEVICE=cpu

# Rate limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=30
